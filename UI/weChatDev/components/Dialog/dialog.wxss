/* components/Dialog/dialog.wxss */

.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.wx-dialog {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 90%;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 3rpx;
  overflow: hidden;
}

.wx-dialog-title {
  font-size: 90%;
  padding: 5% 5% 2%;
}

.wx-dialog-content {
  padding: 10% 10% 10%;
  min-height: 100%;
  font-size: 90%;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #999;
}

.wx-dialog-footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 90%;
  font-size: 90%;
}

.wx-dialog-footer::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #d5d5d6;
  color: #d5d5d6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.wx-dialog-btn {
  border: 2rpx solid #000;
  color: white;
  background-color: #8b0000;
  font-style: normal;
  font-size: 90%;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  margin-top: 2%;
  margin-bottom: 2%;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(2):after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1rpx;
  bottom: 0;
  border-left: 1rpx solid #d5d5d6;
  color: #d5d5d6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

<view class="redTitle">需求详情</view>

<!-- 需求详情 -->
<view class="detailContainer">
  <view class="title startTitle">序号</view>
  <view class="content addColor">{{sceneArray[0].requirementId}}</view>
  <view class="title">共建伙伴</view>
  <view class="content addColor">{{sceneArray[0].companyName}}</view>
  <view class="title">完成阶段</view>
  <view class="content">{{sceneArray[0].processStatus}}</view>
</view>
<view class="detailContainer">
  <view class="title startTitle">需求概述</view>
  <view class="content long">{{sceneArray[0].requirementBriefDescription}}</view>
</view>

<!-- 业务场景导图 -->
<view class="redTitle">业务场景导图</view>
<view class="sceneContainer" wx:for="{{sceneArray}}" wx:key="fatherNode">
  <view class="sceneBrief pad{{item.fatherNode.length}}" id='{{item.fatherNode}}' bindtap='closeBrief'>
    <image id='{{item.fatherNode}}' class="iconType" src="{{imgSrc}}" wx:if='{{item.fatherNode.length < 7}}'></image>
    {{item.scenarioName}}
  </view>
</view>

<view class="downloadLink">
  <label class='line' id='{{sceneArray[0].requirementId}}' bindtap='clickDownload'>业务场景流程下载</label>
</view>
<view class="savePath" wx:if="{{savePath.length > 0}}">保存位置: {{savePath}}</view>
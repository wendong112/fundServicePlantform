/* title样式 */
.redTitle{
  text-align: center;
  align-items: center;
  align-content: center;
  background-color: darkred;
  color: white;

  border-radius: 15rpx;
  font-size: 75%;
  margin: 3%;
  padding: 1%;
}

/* 详情部分 */
.detailContainer{
  display: flex;
  font-size: 70%;
  margin-bottom: 3%;
}

.title {
  margin: 1% 1% 1% 2%;
}

.startTitle {
  margin-left: 3%;
}

.rightTitle {
  margin-left: 5%;
}

.content {
  border:3rpx solid darkred;
  border-radius: 15rpx;

  max-width: 25%;
  min-width: 20%;
}

.disableColor {
  background-color: lightgray;
}

.longContent {
  border:3rpx solid darkred;
  border-radius: 15rpx;

  max-width: 80%;
  min-width: 70%;
}

/* 问题部分 */
textarea {
  margin: 1% 1% 1% 4%;
  font-size: 70%;
  padding: 2%;
  border:3rpx solid darkred; 
  border-radius: 15rpx;
  min-width: 88%;
  max-width: 88%;
}

.shortArea {
  height: 100rpx;
}

/* 评论部分 */
.commentContainer {
  margin: 1% 4% 1% 4%;
  font-size: 70%;
  padding: 2%;
  border:3rpx solid darkred; 
  border-radius: 15rpx;
  height: 300rpx;
  min-width: 88%;
  max-width: 88%;
}

.blueLink {
  color: blue;
  text-align: right;
}

.personComment {
  border-bottom:2rpx gray solid;
  margin-bottom:3%;
  padding-bottom:1%
}

.personTitle {
  color: gray;
}

.viewImageLink {
  color: blue;
  margin-left: 5%;
  margin-top: 3%;
  margin-bottom: 5%;
  font-size: 75%;
}

.line {
  border-bottom: 2rpx blue solid;
}

/* 提交 */
.submitButton {
  background-color: darkred;
  color: white;
  font-size: 90%;
  margin-left: 40%;
}

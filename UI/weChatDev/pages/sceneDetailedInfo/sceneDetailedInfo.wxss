
/* title样式 */
.redTitle{
  text-align: center;
  align-items: center;
  align-content: center;
  background-color: darkred;
  color: white;

  border-radius: 15rpx;
  font-size: 75%;
  margin: 3%;
  padding: 1%;
}

/* 详情样式 */
.detailContainer{
  display: flex;
  font-size: 70%;
}

.title {
  margin: 1% 1% 1% 2%;
}

.content {
  margin: 1% 1% 1% 2%; 
  border: 2rpx darkred solid;
  width: 12%;
  border-radius: 15rpx;
  padding-top: 1%;
  padding-bottom: 1%;
  font-size: 85%;
}

.startTitle {
  margin-left: 3%;
}

.addColor {
  background-color: wheat;
}

.long {
  width: 70%;
}

.sceneContainer {
  font-size: 70%;
  margin-left: 4%;
  margin-right: 4%;
}

.sceneBrief {
  border-bottom: 1rpx lightgray solid;
}

/* 业务场景导图样式 */
.iconType {
  width: 20rpx;
  height:20rpx;
}

.pad3 {
  padding-left: 5%
}

.pad5 {
  padding-left: 10%
}

.pad7 {
  padding-left: 15%
}

.pad9 {
  padding-left: 25%
}

/* 下载样式 */
.downloadLink {
  color: blue;
  padding-left: 3%;
  margin-top: 8%;
  margin-bottom: 5%;
  font-size:75%;
}

.line {
  border-bottom: 2rpx blue solid;
}

.savePath {
  width: 90%;
  padding-left: 3%;
  padding-right:3%;
  margin-top: 3%;
  margin-bottom: 5%;
  font-size:65%;
}
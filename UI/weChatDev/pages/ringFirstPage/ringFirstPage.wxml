<!--pages/ringFirstPage/ringFirstPage.wxml-->

<view class="containerController">

  <view class="versionDisplay">
    您当前生产版本{{currentVersion}}缺陷数据
  </view>

  <view class="canvasContainer">
    <view class="circleContainer">
      <canvas class="circle"  canvas-id="leftCanvas">
      </canvas>
      <view class="circleDesc"><label class='redValue'>{{bugTotalNum}}</label> Numbers</view>
    </view>

    <view class="circleContainer">
      <canvas class="circle"  canvas-id="rightCanvas">
      </canvas>
      <view class="circleDesc"><label class='redValue'>{{bugFixNum}}</label> Numbers</view>
    </view>
  </view>

  <view class="bugContainer">
    <view class="bugGroup" bindtap="clickBugCommit">
      <image src="{{commitImage}}"></image>
      <view>缺陷提交</view>
    </view>
    <view class="bugGroup rightIcon" bindtap="clickBugSearch">
      <image src="{{searchImage}}"></image>
      <view>缺陷搜索</view>
    </view>
  </view>
</view>

<view class="heavyBugDiaplay">
  <view class="redTitle">
    主流版本20170630B严重缺陷集锦
  </view>
  <view class="topBug" id="{{bugArray.top1Id}}" bindtap='clickBugDetail'>
    【TOP1】{{bugArray.top1}}
  </view>
  <view class="topBug" id="{{bugArray.top2Id}}" bindtap='clickBugDetail'>
    【TOP2】{{bugArray.top2}}
  </view>
  <view class="topBug" id="{{bugArray.top3Id}}" bindtap='clickBugDetail'>
    【TOP3】{{bugArray.top3}}
  </view>
  <view class="more" id='20170630B' bindtap='clickMore'>
    >>> 更多
  </view>
</view>



/* title样式 */
.redTitle{
  text-align: center;
  align-items: center;
  align-content: center;
  background-color: darkred;
  color: white;

  border-radius: 15rpx;
  font-size: 75%;
  margin: 3%;
  padding: 1%;
}

/* 详情样式 */
.detailContainer{
  display: flex;
  font-size: 70%;
  margin-bottom: 3%;
}

.title {
  margin: 1% 1% 1% 2%;
}

.startTitle {
  margin-left: 3%;
}

.rightTitle {
  margin-left: 5%;
}

.content {
  border:3rpx solid darkred;
  border-radius: 15rpx;
  padding-left: 1%;
  max-width: 28%;
  min-width: 28%;
}

.disableColor {
  background-color: gainsboro;
}

.longContent {
  border:3rpx solid darkred;
  border-radius: 15rpx;
  padding-left: 1%;
  max-width: 76%;
  min-width: 76%;
}

.longContentView {
  padding-top:2%;
  padding-bottom:2%
}

/*场景导图*/
.sceneContainer {
  font-size: 85%;
  margin-left: 4%;
  margin-right: 4%;
}

.sceneBrief {
  border-bottom: 1rpx lightgray solid;
}

/* 业务场景导图样式 */
.iconType {
  width: 40rpx;
  height: 40rpx;
}

.pad3 {
  padding-left: 5%
}

.pad5 {
  padding-left: 10%
}

.pad7 {
  padding-left: 17%
}

.pad9 {
  padding-left: 27%
}

/* 下载样式 */
.downloadLink {
  color: blue;
  padding-left: 3%;
  margin-top: 8%;
  margin-bottom: 5%;
  font-size:75%;
}

.line {
  border-bottom: 2rpx blue solid;
}

.savePath {
  width: 90%;
  padding-left: 3%;
  padding-right:3%;
  margin-top: 3%;
  margin-bottom: 5%;
  font-size:65%;
}
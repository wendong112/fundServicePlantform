page {
  display: flex;
  flex-direction: column;
}

.navbar {
  flex: none;
  display: flex;
  background: gainsboro;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 230%;
  color: gray;
  font-size: 100%;
}

.navbar .item.active {
  color: green;
  font-size: 100%;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 16%;
  left: 115rpx;
  right: 115rpx;
  height: 5rpx;
  background: green;
}
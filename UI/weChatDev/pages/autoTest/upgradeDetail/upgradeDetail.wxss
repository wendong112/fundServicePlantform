/* pages/autoTest/upgradeDetail/upgradeDetail.wxss */

.upgradeDetail{
  margin:3%;
  padding: 3%;
}

.h1{
  font-size: 50rpx;
  font-weight: bold;
  margin: 5%;
  text-align: center
}

.h2{
  font-size: 35rpx;
  font-weight: bold;
  margin: 5%;
  text-align: center
}

.h2-little {
  font-size: 30rpx;
  color:#757575
}

.content{
  margin: 5%;
}

.content-line{
  font-size: 30rpx;
  margin:0 5%;
}

.link{
  margin: 5%;
  padding: 5%;
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
  border: 1rpx #eeecec solid;
  border-radius:10rpx;
  box-shadow: 3rpx 3rpx 5rpx #c7c7c7;
}

.link-title{
  width:100%;
}

.link-foot{
  width:100%;
  color: #757575
}

.mask{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
} 

.tips{
  float:right;
  margin: 0 15%;
}

.tips-img{
  width:100rpx;
  height:200rpx;
}

.state{
  margin: 5%;
  color: #2196F3;
  font-size: 30rpx;
}

.shareBtn{
  width:50%;
  height: 70px;
  background-color:#fff
}

button::after {
  border: none
}
.plain {
  border: none;
  border-color: transparent;
}
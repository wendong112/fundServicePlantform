/* pages/uniformTest/uniformTest.wxss */
/**index.wxss**/
@import "/common/navbarStyle.wxss";

/* 查看报告 */
.newsUpdate {
  font-size: 75%;
  padding: 2% 10%;
  border-bottom: 1rpx lightgrey solid;
}

.strong {
  font-weight: 800;
}

.briefContent {
  font-size: 60%;
  color: lightgray;
}

.projectProgressView{
  width: 100%;
  height: 100%;
  text-align: center;
}

.projectProgressImage {
  width: 94.5%;
}

/* 查看历次质量报表 */

.pickerContainer {
  display: flex;
  font-size: 80%;
  margin-top: 3%;
}
picker {
  min-width: 40%;
}

.title {
  text-align: right;
  width: 40%;
}

.content {
  text-align: center;
  margin: 0% 5% 0% 5%;
  border: 2rpx darkred solid;
}

.qualityView{
  padding: 5%;
  margin-left: 5%;
  margin-right: 5%;
}

.qualityImage {
  width: 100%; 
  text-align: center;
}